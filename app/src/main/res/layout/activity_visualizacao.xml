<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#006400"
    android:padding="16dp"
    tools:context=".VisualizacaoActivity"
    android:id="@+id/visualizacao">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visualizar alimentos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Filtros -->
    <Spinner
        android:id="@+id/spinnerGrupo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="8dp" />

    <Spinner
        android:id="@+id/spinnerLocal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Lista de produtos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/layoutProdutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Exemplo de produto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leite Aurora 1L"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vencimento: 22/06/2025" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qtd: 3 pç"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btExcluir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excluir"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/black"
                        android:layout_marginEnd="16dp" />


                    <Button
                        android:id="@+id/btEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/black"
                        android:layout_marginEnd="16dp" />


                </LinearLayout>
            </LinearLayout>

            <!-- Repetir esse bloco para cada produto -->

        </LinearLayout>
    </ScrollView>

    <!-- Botão Menu -->
    <Button
        android:id="@+id/btMenu"
        android:layout_width="273dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="Menu"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>
</LinearLayout>
