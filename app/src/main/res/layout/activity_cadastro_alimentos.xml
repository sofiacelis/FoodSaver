<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Nome/Descrição -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome/Descrição:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/etNomeDescricao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Grupo Alimentar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo Alimentar:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerGrupo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Quantidade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerQuantidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Data de Vencimento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Vencimento:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/dataEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Local (Geladeira ou Armário) -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este alimento é de: (Geladeira ou armário)"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerLocal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <!-- Botão Cadastrar -->
        <Button
            android:layout_width="273dp"
            android:layout_height="66dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/black"
            android:text="Cadastrar Alimento"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <!-- Botão Visualizar -->
        <Button
            android:layout_width="273dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:text="Visualizar Alimentos"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>