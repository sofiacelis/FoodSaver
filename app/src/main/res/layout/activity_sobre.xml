<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sobre"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/dark_green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual a finalidade do app?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="363dp"
            android:layout_height="269dp"
            android:justificationMode="inter_word"
            android:paddingTop="20dp"
            android:text="O desperdício de alimentos é um problema global que causa prejuízos financeiros e impactos ambientais. Muitos consumidores descartam alimentos ainda consumíveis por não gerenciarem corretamente suas datas de validade. O aplicativo FoodSaver busca solucionar esse problema, permitindo o cadastro e controle dos alimentos em casa. Com isso, além de reduzir o desperdício, o app incentiva práticas sustentáveis e um consumo mais consciente."
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="Como usar cada tela?"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:paddingTop="20dp"
            android:text="Tela de Cadastro de Alimentos:"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="369dp"
            android:layout_height="69dp"
            android:layout_marginBottom="20dp"
            android:justificationMode="inter_word"
            android:paddingTop="0dp"
            android:text="Nesta tela, você pode cadastrar os alimentos disponíveis no seu armário ou geladeira, incluindo itens recém-comprados."
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="370dp"
            android:layout_height="38dp"
            android:paddingTop="0dp"
            android:text="Tela de Visualização de Alimentos:"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="366dp"
            android:layout_height="35dp"
            android:justificationMode="inter_word"
            android:paddingTop="0dp"
            android:text="Aqui, você pode visualizar os alimentos cadastrados, além de editar ou excluir itens conforme o consumo."
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Tela de Controle de Vencimento:"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="376dp"
            android:layout_height="52dp"
            android:layout_marginBottom="50dp"
            android:justificationMode="inter_word"
            android:paddingTop="0dp"
            android:text="Nesta tela, os alimentos próximos do vencimento são destacados para facilitar o controle e evitar desperdícios."
            android:textColor="@android:color/black"
            android:textSize="15dp" />

</LinearLayout>