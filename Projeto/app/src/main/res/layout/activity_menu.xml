<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/dark_green"
    android:id="@+id/menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingTop="40dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:gravity="center"
        android:padding="9dp">

        <ImageButton
            android:id="@+id/image_button_cadastro"
            android:layout_width="164dp"
            android:layout_height="188dp"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/icon_cadastro"/>

        <ImageButton
            android:id="@+id/image_button_visualizacao"
            android:layout_width="164dp"
            android:layout_height="188dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/icon_visualizacao"/>

        <ImageButton
            android:id="@+id/image_button_controle"
            android:layout_width="164dp"
            android:layout_height="188dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/icon_controle"/>

        <ImageButton
            android:id="@+id/image_button_config"
            android:layout_width="164dp"
            android:layout_height="188dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/icon_config"/>
    </GridLayout>

    <Button
        android:id="@+id/btSobre"
        android:layout_width="253dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="Sobre o app"
        android:textSize="25dp"
        android:textStyle="bold">

    </Button>

</LinearLayout>